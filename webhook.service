[Unit]
Description=GitHub Webhook Server for TARA Auto-Deploy
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/scalp-bot
Environment="WEBHOOK_SECRET=your-secret-token-here"
ExecStart=/usr/bin/python3 /home/pi/scalp-bot/webhook_server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
